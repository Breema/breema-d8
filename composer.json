{
  "name": "pantheon-systems/example-drops-8-composer",
  "description": "Install drops-8 with Composer on Pantheon.",
  "type": "project",
  "license": "MIT",
  "repositories": [
    {
      "type": "composer",
      "url": "https://packages.drupal.org/8"
    }
  ],
  "require": {
    "composer/installers": "^1.0.20",
    "cweagans/composer-patches": "^1.0",
    "drupal-composer/drupal-scaffold": "^2.0.1",
    "drupal/address": "^1.2",
    "drupal/admin_toolbar": "^1.23",
    "drupal/auto_entitylabel": "2.x-dev",
    "drupal/computed_field": "^2.0@alpha",
    "drupal/config_direct_save": "^1.0",
    "drupal/config_installer": "^1.0",
    "drupal/console": "^1",
    "drupal/core": "^8.5",
    "drupal/ctools": "^3.0",
    "drupal/diff": "^1.0@RC",
    "drupal/dropzonejs": "^2.0",
    "drupal/embed": "^1.0",
    "drupal/entity": "^1.0",
    "drupal/entity_browser": "^2.0",
    "drupal/entity_embed": "^1.0",
    "drupal/entityqueue": "1.x-dev",
    "drupal/field_group": "^3.0",
    "drupal/field_permissions": "^1.0@beta",
    "drupal/filefield_paths": "1.x-dev",
    "drupal/fixed_text_link_formatter": "^1.1",
    "drupal/geocoder": "2.x-dev",
    "drupal/geolocation": "1.x-dev",
    "drupal/inline_entity_form": "^1.0@beta",
    "drupal/jsonapi": "^2.0",
    "drupal/login_emailusername": "^1.1",
    "drupal/media_entity_browser": "2.x-dev",
    "drupal/menu_block": "^1.4",
    "drupal/paragraphs": "^1.2",
    "drupal/pathauto": "^1.0",
    "drupal/redirect": "^1.0",
    "drupal/simple_block": "^1.0@beta",
    "drupal/smart_trim": "^1.0",
    "drupal/smtp": "^1.0",
    "drupal/social_media_links": "^2.6",
    "drupal/token": "^1.0",
    "drupal/video_embed_field": "^2.0",
    "drush/drush": "~8",
    "enyo/dropzone": "^5.1",
    "rvtraveller/qs-composer-installer": "^1.1",
    "webflo/drupal-core-strict": "^8.5"
  },
  "require-dev": {
    "behat/behat": "3.*",
    "behat/mink": "^1.7",
    "behat/mink-extension": "^2.2",
    "behat/mink-goutte-driver": "^1.2",
    "drupal/drupal-extension": "^3.1",
    "drupal/migrate_plus": "^4.0",
    "drupal/migrate_source_csv": "^2.0",
    "drupal/migrate_tools": "^4.0",
    "drush-ops/behat-drush-endpoint": "^0.0.4",
    "jcalderonzumba/gastonjs": "^1.0.2",
    "jcalderonzumba/mink-phantomjs-driver": "^0.3.1",
    "mikey179/vfsstream": "^1.2",
    "pantheon-systems/quicksilver-pushback": "~1",
    "phpunit/phpunit": "^4.8",
    "symfony/css-selector": "^2.8"
  },
  "conflict": {
      "drupal/drupal": "*"
  },
  "minimum-stability": "alpha",
  "prefer-stable": true,
  "autoload": {
    "classmap": [
      "scripts/composer/ScriptHandler.php"
    ]
  },
  "scripts": {
    "build-assets": [
      "@prepare-for-pantheon",
      "composer install --optimize-autoloader"
    ],
    "lint": "find web/modules/custom web/themes/custom -name '*.php' -exec php -l {} \\;",
    "code-sniff": "echo 'No code sniff step defined.'",
    "unit-test": "echo 'No unit test step defined.'",
    "drupal-scaffold": "DrupalComposer\\DrupalScaffold\\Plugin::scaffold",
    "prepare-for-pantheon": "DrupalProject\\composer\\ScriptHandler::prepareForPantheon",
    "post-install-cmd": [
      "@drupal-scaffold",
      "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
    ],
    "post-update-cmd": [
      "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
    ],
    "post-create-project-cmd": [
      "@drupal-scaffold",
      "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
    ]
  },
  "extra": {
    "patches": {
      "drupal/auto_entitylabel": {
        "[#2120055-22] Trim auto-generated labels" : "https://www.drupal.org/files/issues/2018-04-04/2120055-22.auto_entitylabel-8.x-2.x.trim-no-config.patch",
        "[#2905230-6] Alter inline_entity_form table to display auto-computed entity labels" : "https://www.drupal.org/files/issues/Title_displayed_as_AutoEntityLabel_after_saving_via_Inline_Entity_Form-2905230-6.patch"
      },
      "drupal/core": {
        "[#2484693-75] Telephone Link field formatter InvalidArgumentException with 5 digits or fewer in the number" : "https://www.drupal.org/files/issues/2018-09-12/2484693-75.patch",
        "[#2648950-166] Use form element of type date instead textfield when selecting a date in an exposed filter" : "https://www.drupal.org/files/issues/2018-07-06/2648950-166.patch",
        "[#2799987-74] Datetime and Datelist element's timezone handling is fragile, buggy and wrongly documented" : "https://www.drupal.org/files/issues/2018-08-15/2799987-74.patch",
        "[#2835825-21 Media: Migration support" : "https://www.drupal.org/files/issues/2835825-21.patch",
        "[#2865344-35] Exposed date filters 'empty' and 'not empty' are broken" : "https://www.drupal.org/files/issues/2018-03-09/2865344-35.patch",
        "[#2866386-4] 'view_path' is set to /views/ajax after second ajax request" : "https://www.drupal.org/files/issues/2866386-4.patch",
        "[#2959869-5] Creating Media Type gives this Error: Call to a member function getName()" : "https://www.drupal.org/files/issues/2018-04-16/create-media-error-2959869-5.patch"
      },
      "drupal/filefield_paths": {
        "[#2718783-13] Call to undefined method BaseFieldDefinition::getThirdPartySettings()" : "https://www.drupal.org/files/issues/call_to_undefined-2718783-13.patch"
      },
      "drupal/geolocation": {
        "[#2921121-2] Empty h2 markup when locations don't use a 'title' field" : "https://www.drupal.org/files/issues/2921121-1.hide-location-title-completely.patch",
        "[#2921437-9] Provide simple JS pager for raw results on Google common map display" : "https://www.drupal.org/files/issues/2921437-9.raw-location-js-pager.patch"
      },
      "drupal/inline_entity_form": {
        "[#2729333-7] Can't select a default bundle when using entity reference views" : "https://www.drupal.org/files/issues/2729333-ief-bundle-selection-erv-7.patch"
      },
      "drupal/menu_block": {
        "[#2809699-51] Menu parent as block title" : "https://www.drupal.org/files/issues/menu_block-label_configuration-2809699-51.patch"
      }
    },
    "installer-paths": {
      "web/core": ["type:drupal-core"],
      "web/modules/contrib/{$name}": ["type:drupal-module"],
      "web/profiles/contrib/{$name}": ["type:drupal-profile"],
      "web/themes/contrib/{$name}": ["type:drupal-theme"],
      "drush/contrib/{$name}": ["type:drupal-drush"]
    },
    "build-env": {
      "install-cms": [
        "drush site-install standard --account-mail={account-mail} --account-name={account-name} --account-pass={account-pass} --site-mail={site-mail} --site-name={site-name} --yes",
        "drush pm-enable config_direct_save simple_block --yes",
        "drush pm-uninstall block_content --yes"
      ],
      "export-configuration": "drush config-export --yes"
    },
    "drupal-scaffold": {
      "source": "https://raw.githubusercontent.com/pantheon-systems/drops-8/{version}/{path}",
      "includes": [
        "sites/default/default.services.pantheon.preproduction.yml",
        "sites/default/settings.pantheon.php"
      ],
      "excludes": [
        ".csslintrc",
        ".editorconfig",
        ".eslintignore",
        ".eslintrc.json",
        "web.config"
      ]
    }
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true,
    "platform": {
      "php": "7.0.8"
    }
  }
}
