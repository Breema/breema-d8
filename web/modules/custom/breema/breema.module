<?php

/**
 * @file
 * Contains breema.module.
 */

use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function breema_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    // Main module help for the breema module.
    case 'help.page.breema':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('Custom code for www.breema.com') . '</p>';
      return $output;

    default:
  }
}

/**
 * Computed field callback function for field_maximum_certification.
 */
function computed_field_field_maximum_certification_compute($entity_type_manager, $entity, $fields, $delta) {
  if (empty($fields['field_instructor_certification'])) {
    return t('Breema Practitioner');
  }
  for ($i=0; $i<=1; $i++) {
    if (!empty($fields['field_instructor_certification'][$i]['value'])
        && $fields['field_instructor_certification'][$i]['value'] == 'bodywork'
    ) {
      return t('Breema Bodywork Instructor');
    }
  }
  return t('Self Breema Instructor');
}
