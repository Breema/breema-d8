<html>
  <head>
    <meta charset="utf-8">
    {% if css_path %}
      <link rel="stylesheet" href="{{ css_path }}" media="all" />
    {% endif %}
    {% if inline_css %}
      <style type="text/css">{{ inline_css }}</style>
    {% endif %}
  </head>
  <body>
   <div id="page-wrapper">
    <div class="layout-container">
      <div class="header">
        <h1 class="site-name"><a href="{{ front_page }}" title="{{ site_name }}">{{ site_name }}</a></h1>
      </div>
      <div class="body">
        {% if header %}
          <div class="message-header">{{ header }}</div>
        {% endif %}
        <div class="content">{{ content }}</div>
      </div>
      {% if footer %}
        <div class="footer">{{ footer }}</div>
      {% endif %}
     </div>
   </div>
  </body>
</html>
