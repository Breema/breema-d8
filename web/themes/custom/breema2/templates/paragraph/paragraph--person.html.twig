{%
  set classes = [
    'paragraph',
    'paragraph--type--' ~ paragraph.bundle|clean_class,
    view_mode ? 'paragraph--view-mode--' ~ view_mode|clean_class,
    not paragraph.isPublished() ? 'paragraph--unpublished'
  ]
%}

{% block paragraph %}
  <div{{ attributes.addClass(classes) }}>
    {% if url %}
      <a href="{{ url }}" class="teaser-link">
    {% endif %}
    {{ content.field_header_text }}
    <div class="grid--container grid--container-1-2u3366">
      <div class="grid--item">{{ content.field_media }}</div>
      <div class="grid--item">{{ content|without('field_header_text', 'field_media') }}</div>
    </div>
    {% if url %}
      </a>
    {% endif %}
    {{ upcoming }}
  </div>
{% endblock paragraph %}
