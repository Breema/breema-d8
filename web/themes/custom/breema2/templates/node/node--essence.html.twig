{%
  set classes = [
    'node',
    'node--type-' ~ node.bundle|clean_class,
    node.isPromoted() ? 'node--promoted',
    node.isSticky() ? 'node--sticky',
    not node.isPublished() ? 'node--unpublished',
    view_mode ? 'node--view-mode-' ~ view_mode|clean_class,
    'clearfix',
  ]
%}
{{ attach_library('classy/node') }}

<article{{ attributes.addClass(classes) }}>
  {% if not page %}
    <a href="{{ url }}" rel="bookmark" class="teaser-link">
  {% endif %}
  <header>
    {{ title_prefix }}
    {% if not page %}
      <h2{{ title_attributes.addClass('node__title') }}>{{ label }}</h2>
    {% endif %}
    {{ title_suffix }}
  </header>
  <div{{ content_attributes.addClass('node__content', 'clearfix') }}>
    {{ content.field_main_image }}
    <figure>
      <blockquote>
        {{ content.body }}
      </blockquote>
      <figcaption class="attribution">From {{ product.cite }}</figcaption>
    </figure>
    {% if not page %}
      </a>
    {% endif %}
    {{ content|without('field_main_image', 'body') }}
  </div>
</article>
